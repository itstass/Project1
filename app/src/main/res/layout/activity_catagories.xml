<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">


    <!-- Category List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- OTC Medicine Button -->
            <Button
                android:id="@+id/btn_otc_medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE2E2"
                android:text="OTC Medicine"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Diabetic Care Button -->
            <Button
                android:id="@+id/btn_diabetic_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D8F1F7"
                android:text="Diabetic Care"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Dental Care Button -->
            <Button
                android:id="@+id/btn_dental_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE2E2"
                android:text="Dental Care"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Mental Health Button -->
            <Button
                android:id="@+id/btn_mental_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D8F1F7"
                android:text="Mental Health"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Women's Health Button -->
            <Button
                android:id="@+id/btn_womens_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE2E2"
                android:text="Women's Health"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <!-- First Aid Button -->
            <Button
                android:id="@+id/btn_first_aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D8F1F7"
                android:text="First Aid"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
